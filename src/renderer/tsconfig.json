{
  "compilerOptions": {
    "target": "es2022",
    "lib": [
      "dom",
      "ESNext"
    ],
    "jsx": "react",
    "module": "commonjs",
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["./node_modules", "./configs/"]
}
